@{
}
@model List<Chapter>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Chapter</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Base CSS (Common Styles) -->
    <link rel="stylesheet" href="~/css/Chapter/ViewChapter.css">
    <!-- Page-Specific Styles -->
    <link href="~/css/baseChapter.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

</head>

<body>
    <header class="container-fluid">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/lib/img/BrainStormEra_logo.png" alt="Logo" class="logo_img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#">DASHBOARD</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">COURSE</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">USER</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">CERTIFICATE</a></li>
                    </ul>
                    <div class="profile d-flex align-items-center">
                        <i class="fas fa-bell icon"></i>
                        <img src="../assests/img/landing_page/user.jpg" alt="Profile Picture" class="user_img">
                        <span class="d-none d-md-inline">User</span>
                        <i class="fas fa-chevron-down d-none d-md-inline"></i>
                        <i class="fa-solid fa-arrow-right-from-bracket exit_icon"></i>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light sidebar p-3">
            <a class="btn btn-primary w-100 mb-3" href="@Url.Action("ChapterManagement", "Chapter", new { courseId = @ViewBag.CourseId })">Add Chapter</a>
            <a class="btn btn-outline-secondary w-100 mb-3" href="@Url.Action("DeleteChapter", "Chapter", new { courseId = @ViewBag.CourseId })">Delete Chapter</a>
            <a class="btn btn-outline-secondary w-100" href="@Url.Action("ViewChapters", "Chapter", new { courseId = @ViewBag.CourseId })">View Chapter</a>
        </div>

        <!-- Main Content for View Chapter -->
        <div class="col-md-9 d-flex align-items-start vh-100">
            <div class="card w-100">
                <div class="card-header gradient-header">
                    VIEW CHAPTER
                </div>
                <div class="card-body">
                    <!-- List of chapters with edit and manage lessons buttons -->
                    @foreach (var c in Model)
                    {
                        <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5>@c.ChapterName</h5>
                                <a class="btn btn-outline-primary btn-sm" href="/Chapter/EditChapter/@c.ChapterId">Edit</a>
                            </div>
                            <p>@c.ChapterDescription</p>
                            <a class="btn btn-primary" href="../html/ManageLesson.html">Manage Lessons</a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
    </div>

    <footer class="bg-secondary text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h3>BrainStormEra</h3>
                    <div class="social-icons my-2">
                        <i class="fab fa-facebook me-2"></i>
                        <i class="fab fa-instagram me-2"></i>
                        <i class="fab fa-x-twitter"></i>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h4>Contact Us</h4>
                    <p class="mb-1">Tel: 123-456-789</p>
                    <p>Email: brainstormera@edu.vn</p>
                </div>
                <div class="col-md-4">
                    <h4>Address</h4>
                    <p class="mb-1">123 Nguyen Van Cu, Cai Rang</p>
                    <p>District, Cantho, Vietnam</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>