@page
@model BrainStormEra.Views.Achievement.LearnerAchievementsModel
@{
    var userId = ViewData["UserId"] as string;
    var achievements = ViewData["Achievements"] as IEnumerable<dynamic>;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Achievements</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Achievement/achievement.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css">
</head>

<body>
    <header class="container-fluid">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="" alt="Logo" class="logo_img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#">DASHBOARD</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">COURSE</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">USER</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Achievements", "Achievement", new { userId = ViewBag.UserId })">ACHIEVEMENT</a>  </li>
                        <li class="nav-item"><a class="nav-link" href="#">CERTIFICATE</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">CHATBOT</a></li>
                    </ul>
                    <div class="profile d-flex align-items-center">
                        <i class="fas fa-bell icon"></i>
                        <img src="../assests/img/landing_page/user.jpg" alt="Profile Picture" class="user_img">
                        <span class="d-none d-md-inline">User</span>
                        <i class="fas fa-chevron-down d-none d-md-inline"></i>
                        <i class="fa-solid fa-arrow-right-from-bracket exit_icon"></i>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Main Content -->
    <main class="container my-5">
        <h2 class="text-center mb-5">Your Achievements</h2>

        <div class="row justify-content-center">
            @if (achievements != null && achievements.Any())
            {
                foreach (var achievement in achievements)
                {
                    <div class="col-md-4">
                        <div class="card achievement-card text-center" data-bs-toggle="modal" data-bs-target="#achievementModal"
                             data-name="@achievement.AchievementName"
                             data-description="@achievement.AchievementDescription"
                             data-icon="@achievement.AchievementIcon"
                             data-date="@achievement.ReceivedDate.ToString("yyyy-MM-dd")">
                            <img src="@achievement.AchievementIcon" alt="@achievement.AchievementName" class="card-img-top mx-auto">
                            <div class="card-body">
                                <h5 class="card-title">@achievement.AchievementName</h5>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No achievements found for this user.</p>
            }
        </div>

        <!-- Modal for Achievement Details -->
        <div class="modal fade" id="achievementModal" tabindex="-1" aria-labelledby="achievementModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="achievementModalLabel">Achievement Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <img id="achievement-icon" src="" class="img-fluid mb-3" alt="Achievement Icon">
                        <h5 id="achievement-name"></h5>
                        <p id="achievement-description"></p>
                        <p><strong>Date Received:</strong> <span id="achievement-date"></span></p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-secondary text-white py-4">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h3>BrainStormEra</h3>
                    <div class="social-icons my-2">
                        <i class="fab fa-facebook me-2"></i>
                        <i class="fab fa-instagram me-2"></i>
                        <i class="fab fa-x-twitter"></i>
                    </div>
                    <p>2024 by BrainStormEra</p>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h4>Contact Us</h4>
                    <p class="mb-1">Tel: 123-456-789</p>
                    <p>Email: brainstormera@edu.vn</p>
                </div>
                <div class="col-md-4">
                    <h4>Address</h4>
                    <p class="mb-1">123 Nguyen Van Cu, Cai Rang</p>
                    <p>District, Cantho, Vietnam</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Achievement/LearnerAchievement.js"></script>
</body>

</html>

