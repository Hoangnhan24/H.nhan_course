@model BrainStormEra.Models.Account
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/base.css">

    <!-- Custom Styles for Adjusting Header and Layout -->
    <style>
        /* Override the height and padding of the header */
        header.container-fluid {
            padding: 8px 0;
            background-color: var(--background-light);
            box-shadow: 0 2px 10px var(--box-shadow-color);
        }

        .logo_img {
            max-width: 70px;
            height: auto;
        }

        .navbar-nav .nav-item .nav-link {
            font-size: 1.4rem;
            padding: 6px 12px;
        }

        .profile .user_img {
            width: 35px;
            height: 35px;
            border-radius: 50%;
        }

        .profile {
            font-size: 1.4rem;
        }

            .profile .fas.fa-bell {
                font-size: 1.5rem;
            }

        .sticky-header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: var(--background-light);
        }

        /* Profile table custom styles */
        .table {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px var(--box-shadow-color);
            margin-top: 20px;
            overflow: hidden;
        }

            .table th {
                background-color: #4682b4;
                color: white;
                padding: 12px;
                text-align: left;
            }

            .table td {
                padding: 12px;
                background-color: #f8f9fa;
                color: #333;
            }

        /* Button styling */
        .btn-custom {
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 1.4rem;
        }

            .btn-custom:hover {
                background-color: #218838;
            }

        /* Profile Card customization */
        .profile-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px var(--box-shadow-color);
            text-align: center;
            padding: 20px;
        }

            .profile-card img {
                max-width: 100px;
                border-radius: 50%;
                margin-bottom: 15px;
            }

            .profile-card h4 {
                font-size: 1.6rem;
                color: #333;
            }

            .profile-card p {
                color: #666;
            }

        footer {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
            text-align: center;
            margin-top: auto;
            width: 100%;
        }

            footer h3, footer h4 {
                color: #fff;
            }

        .social-icons i {
            margin-right: 10px;
            font-size: 1.5rem;
            color: #fff;
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <header class="container-fluid sticky-header">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/lib/img/BrainStormEra_logo.png" alt="Logo" class="logo_img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Courses</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Certificates</a></li>
                    </ul>
                    <div class="profile d-flex align-items-center">
                        <i class="fas fa-bell"></i>
                        <a href="@Url.Action("Index", "Profile", new { accountId = HttpContextAccessor.HttpContext.Session.GetString("user_id") })">
                            <img src="@Url.Content(Model?.UserPicture ?? "~/lib/img/User-img/default_user.png")" alt="Profile Picture" class="user_img">
                        </a>
                        <span class="d-none d-md-inline">@Model?.FullName ?? "User"</span>
                        <i class="fas fa-chevron-down d-none d-md-inline"></i>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Section -->
    <main class="container mt-5">
        <div class="row">
            <!-- Profile Card -->
            <div class="col-md-4">
                <div class="profile-card">
                    <img class="card-img-top" src="@Model.UserPicture ?? '/images/default.png'" alt="User Picture" />
                    <h4>@Model.FullName</h4>
                    <p>@Model.UserEmail</p>
                </div>
            </div>

            <!-- Profile Details Section -->
            <div class="col-md-8">
                <h2 class="text-primary">@Model.FullName's Profile</h2>
                <table class="table table-hover table-bordered">
                    <tbody>
                        <tr>
                            <th>Username</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.UserEmail</td>
                        </tr>
                        <tr>
                            <th>Full Name</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@Model.DateOfBirth?.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.UserAddress</td>
                        </tr>
                        <tr>
                            <th>Payment Points</th>
                            <td>@Model.PaymentPoint</td>
                        </tr>
                        <tr>
                            <th>Account Created At</th>
                            <td>@Model.AccountCreatedAt?.ToString("MM/dd/yyyy")</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Edit Profile Button -->
                <a href="@Url.Action("Edit", "Profile", new { id = @Model.UserId })" class="btn btn-custom btn-lg mt-3">
                    Edit Profile
                </a>
            </div>
        </div>
    </main>

    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h3>BrainStormEra</h3>
                    <div class="social-icons my-2">
                        <i class="fab fa-facebook"></i>
                        <i class="fab fa-instagram"></i>
                        <i class="fab fa-twitter"></i>
                    </div>
                    <p>2024 by BrainStormEra.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h4>Contact Us</h4>
                    <p>Tel: 123-456-789</p>
                    <p>Email: brainstormera@edu.vn</p>
                </div>
                <div class="col-md-4">
                    <h4>Address</h4>
                    <p>123 Nguyen Van Cu, Cai Rang, Can Tho, Vietnam</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Link to Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
